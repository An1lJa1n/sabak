				tr
					th(colspan="2")
						input(st-search="", class="form-control", placeholder="Search ...", type="text")
					th(colspan="9")
						div(class="controls")
							select(style="width: 150px;display: inline;margin-right:30px" class= "form-control", ng-model="filterStatus", ng-options="value.id as value.description for value in filterStatuses")
