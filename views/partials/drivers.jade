					th(st-sort="mobile") Mobile Number
					th(st-sort="taxExpiry") Tax
					th(st-sort="fitnessExpiery") Fitness
					th(st-sort="permitExpiery") Permit 
					th(st-sort="insuranceExpiry") Insurance
					th(st-sort="professionalTaxExpiry") Prof Tax
					th
					th
					th
			tbody
				tr(ng-repeat="row in displayDrivers")
					td {{row.vehicalNumber}}
					td {{row.owner}}
					td {{row.mobile}}
					td(style="background-color:{{getColorCode(row.taxExpiry)}}") {{formatDate(row.taxExpiry)}}
					td(style="background-color:{{getColorCode(row.fitnessExpiry)}}") {{formatDate(row.fitnessExpiry)}}
					td(style="background-color:{{getColorCode(row.permitExpiry)}}") {{formatDate(row.permitExpiry)}}
